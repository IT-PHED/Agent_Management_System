@model Fedco.PHED.Agent.management.Web.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";


}
@if ((int)Session["UserTypeId"] == 1)
{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
else
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using (Html.BeginForm("SaveNewPassword", "Account"))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            Change Password
        </div>
        <div class="card-body">
            <div class="form-horizontal" style="height:400px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", @placeholder = "Old Password", id = "txtOldPassword" })
                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "New Password", id = "txtNewPassword" })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", id = "txtConfirmPassword" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4 text-center">
                        @if ((int)Session["UserTypeId"] == 1)
                        {
                            @Html.ActionLink("Cancel", "Index", "Admin", null, new { @class = "btn btn-primary" })
                        }
                        else
                        {
                            @Html.ActionLink("Cancel", "Home", "Account", null, new { @class = "btn btn-primary" })
                        }

                        <input type="submit" value="Change Password" class="btn btn-primary" id="btnSubmit" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>

}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">



</script>
