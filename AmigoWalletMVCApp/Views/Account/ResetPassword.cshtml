
@model Fedco.PHED.Agent.management.Web.Models.ResetPasswordModel
@{
    /**/

    ViewBag.Title = "PHED - Reset Password";
    Layout = "~/Views/Shared/_anonymusLayout.cshtml";
}
<h2 class='head_title'>
    <span>Reset Password</span>
</h2>
@Styles.Render("~/Content/themes/base/css", "~/Content/css")
@Scripts.Render("~/bundles/jquery", "~/bundles/modernizr", "~/bundles/jqueryui", "~/bundles/sitejs")
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="cPassword_Area">
    <div class="resetAreaDiv">
        @if (Model != null)
    {
        using (Html.BeginForm("ResetPassword", "Account"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="insideRow">
            <br />
            <p>
                <span><strong>User Email :</strong></span> <span>@Model.Email</span>
            </p>
            <p>
                <span><strong>User ID :</strong></span> <span>@Model.Id</span>
            </p>
            <br />


        </div>



            <div class="form-horizontal" style="height:400px;">

              
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.HiddenFor(m => m.Email)
                                @Html.HiddenFor(m => m.Id)
                                @Html.PasswordFor(m => m.NewPassword, new { @Class = "form-control txtPwd", @placeholder = "New Password", id = "txtNewPassword" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", id = "txtConfirmPassword" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4 text-center">

                        @Html.ActionLink("Cancel", "Index", "Login", null, new { @class = "btn btn-primary" })
                        <input type="submit" value="Change Password" class="btn btn-primary" id="btnSubmit" />
                    </div>
                </div>
                }
            </div>

    }
}
else
{
    <br /><div>Invalid request.</div>
}

    </div>
    <br class="clear" />
</div>
